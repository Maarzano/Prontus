<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="inodev.controllers.LoginController">
    <padding>
        <Insets top="30.0" right="30.0" bottom="30.0" left="30.0" />
    </padding>
    <children>
        <Label text="Prontus - Sistema Hospitalar" style="-fx-font-size: 24px; -fx-text-fill: #6A0DAD; -fx-font-weight: bold;" />
        <VBox alignment="CENTER" spacing="10.0">
            <children>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Usuário:" style="-fx-font-size: 14px;" />
                        <TextField fx:id="usernameField" promptText="Digite seu usuário" />
                    </children>
                </HBox>
                <HBox alignment="CENTER_LEFT" spacing="10.0">
                    <children>
                        <Label text="Senha:" style="-fx-font-size: 14px;" />
                        <PasswordField fx:id="passwordField" promptText="Digite sua senha" />
                    </children>
                </HBox>
            </children>
        </VBox>
        <Button text="Entrar" fx:id="loginButton" onAction="#handleLogin" style="-fx-background-color: #6A0DAD; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 10px 20px;" />
        <Label fx:id="errorMessage" text="" style="-fx-text-fill: red; -fx-font-size: 12px;" />
    </children>
</VBox>